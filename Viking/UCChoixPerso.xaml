<UserControl x:Class="Viking.UCChoixPerso"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid Background="#2C3E50">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" Text="CHOIX DES PERSONNAGES" 
                   FontSize="48" FontWeight="Bold" Foreground="White"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- JOUEUR 1 -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TxtJoueur1" Text="Joueur 1: Choisissez votre personnage" 
                       FontSize="24" FontWeight="Bold" Foreground="#2ECC71"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Viking J1 -->
                <Border x:Name="BorderViking1" BorderBrush="Transparent" BorderThickness="0" Margin="10" 
                        Background="#34495E" Padding="10" Cursor="Hand"
                        MouseDown="ImgViking1_MouseDown">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Viking;component/img/Viking_Portrait.png" 
                               Width="100" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Viking" FontSize="18" Foreground="White" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Spearwoman J1 -->
                <Border x:Name="BorderSpearwoman1" BorderBrush="Transparent" BorderThickness="0" Margin="10"
                        Background="#34495E" Padding="10" Cursor="Hand"
                        MouseDown="ImgSpearwoman1_MouseDown">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Viking;component/img/Spearwoman_Portrait.png" 
                               Width="100" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Spearwoman" FontSize="18" Foreground="White" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Fire Warrior J1 -->
                <Border x:Name="BorderFireWarrior1" BorderBrush="Transparent" BorderThickness="0" Margin="10"
                        Background="#34495E" Padding="10" Cursor="Hand"
                        MouseDown="ImgFireWarrior1_MouseDown">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Viking;component/img/Fire_Warrior_Portrait.png" 
                               Width="100" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Fire Warrior" FontSize="18" Foreground="White" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- JOUEUR 2 -->
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TxtJoueur2" Text="Joueur 2: Choisissez votre personnage" 
                       FontSize="24" FontWeight="Bold" Foreground="#3498DB"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Viking J2 -->
                <Border x:Name="BorderViking2" BorderBrush="Transparent" BorderThickness="0" Margin="10"
                        Background="#34495E" Padding="10" Cursor="Hand"
                        MouseDown="ImgViking2_MouseDown">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Viking;component/img/Viking_Portrait.png" 
                               Width="100" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Viking" FontSize="18" Foreground="White" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Spearwoman J2 -->
                <Border x:Name="BorderSpearwoman2" BorderBrush="Transparent" BorderThickness="0" Margin="10"
                        Background="#34495E" Padding="10" Cursor="Hand"
                        MouseDown="ImgSpearwoman2_MouseDown">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Viking;component/img/Spearwoman_Portrait.png" 
                               Width="100" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Spearwoman" FontSize="18" Foreground="White" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Fire Warrior J2 -->
                <Border x:Name="BorderFireWarrior2" BorderBrush="Transparent" BorderThickness="0" Margin="10"
                        Background="#34495E" Padding="10" Cursor="Hand"
                        MouseDown="ImgFireWarrior2_MouseDown">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Viking;component/img/Fire_Warrior_Portrait.png" 
                               Width="100" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Fire Warrior" FontSize="18" Foreground="White" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- Bouton Commencer -->
        <Button x:Name="BtnCommencer" Grid.Row="3" Content="COMMENCER LE COMBAT" 
                FontSize="28" FontWeight="Bold" 
                Width="400" Height="60"
                Background="#E74C3C" Foreground="White"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                IsEnabled="False" Opacity="0.5"
                Click="BtnCommencer_Click"/>
    </Grid>
</UserControl>