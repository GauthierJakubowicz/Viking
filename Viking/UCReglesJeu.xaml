<UserControl x:Class="Viking.UCReglesJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="#2C3E50">

    <Grid>
        <Border Background="#34495E"
                Margin="50"
                CornerRadius="10"
                BorderBrush="#1ABC9C"
                BorderThickness="3">

            <!-- FIXED: Use Margin on StackPanel instead of Padding -->
            <StackPanel Margin="40" VerticalAlignment="Center">

                <!-- Titre -->
                <TextBlock Text="RÈGLES DU JEU"
                          FontSize="48"
                          FontWeight="Bold"
                          Foreground="#ECF0F1"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30" />

                <!-- Section Joueur 1 -->
                <Border Background="#2C3E50" 
                        Padding="20" 
                        CornerRadius="5" 
                        Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="🎮 JOUEUR 1 - Contrôles Clavier (Gauche)" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#1ABC9C" 
                                  Margin="0,0,0,10"/>

                        <TextBlock FontSize="18" Foreground="#ECF0F1" TextWrapping="Wrap">
                            <Run Text="• Q / D : Se déplacer gauche / droite" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="• S : Glisser (Slide)"/>
                            <LineBreak/>
                            <Run Text="• ESPACE : Attaque 1"/>
                            <LineBreak/>
                            <Run Text="• A : Attaque 2"/>
                            <LineBreak/>
                            <Run Text="• Z : Attaque 3"/>
                            <LineBreak/>
                            <Run Text="• E : Bloquer"/>
                            <LineBreak/>
                            <Run Text="• R : Test Hit / F : Test Death / T : Idle"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Section Joueur 2 -->
                <Border Background="#2C3E50" 
                        Padding="20" 
                        CornerRadius="5" 
                        Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="🎮 JOUEUR 2 - Contrôles Clavier (Droite)" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#3498DB" 
                                  Margin="0,0,0,10"/>

                        <TextBlock FontSize="18" Foreground="#ECF0F1" TextWrapping="Wrap">
                            <Run Text="• ← / → : Se déplacer gauche / droite" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="• ↓ : Glisser (Slide)"/>
                            <LineBreak/>
                            <Run Text="• NUMPAD 0 ou CTRL Droit : Attaque 1"/>
                            <LineBreak/>
                            <Run Text="• NUMPAD 1 : Attaque 2"/>
                            <LineBreak/>
                            <Run Text="• NUMPAD 2 : Attaque 3"/>
                            <LineBreak/>
                            <Run Text="• NUMPAD 3 ou SHIFT Droit : Bloquer"/>
                            <LineBreak/>
                            <Run Text="• NUMPAD 4/5/6 : Test Hit / Death / Idle"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Objectif -->
                <Border Background="#E74C3C" 
                        Padding="20" 
                        CornerRadius="5" 
                        Margin="0,20,0,10">
                    <TextBlock Text="🎯 OBJECTIF : Battez votre adversaire en utilisant vos attaques et blocages !" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              TextAlignment="Center" 
                              TextWrapping="Wrap"/>
                </Border>

                <!-- Bouton Retour -->
                <Button x:Name="BtnRetour"
                       Content="← RETOUR AU MENU"
                       FontSize="24"
                       FontWeight="Bold"
                       Padding="30,15"
                       Margin="0,30,0,0"
                       Background="#E74C3C"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       HorizontalAlignment="Center"
                       Click="BtnRetour_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="8"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>