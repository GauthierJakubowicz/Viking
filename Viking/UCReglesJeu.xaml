<UserControl x:Class="VikingGame.UCReglesJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="1200" Height="1071">
    <Grid Background="#2C3E50">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" Text="RÈGLES DU JEU" 
                   FontSize="48" FontWeight="Bold" Foreground="White"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Contenu des règles -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="50,20">
            <StackPanel>
                <!-- Joueur 1 -->
                <Border Background="#34495E" Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="JOUEUR 1 - CONTRÔLES" FontSize="28" FontWeight="Bold" 
                                   Foreground="#2ECC71" Margin="0,0,0,15"/>

                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="Q" FontWeight="Bold"/> - Marcher à gauche
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="D" FontWeight="Bold"/> - Courir à droite
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="S" FontWeight="Bold"/> - Glissade (Slide)
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="ESPACE" FontWeight="Bold"/> - Attaque 1
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="A" FontWeight="Bold"/> - Attaque 2
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="Z" FontWeight="Bold"/> - Attaque 3
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="E" FontWeight="Bold"/> - Bloquer
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Joueur 2 -->
                <Border Background="#34495E" Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="JOUEUR 2 - CONTRÔLES" FontSize="28" FontWeight="Bold" 
                                   Foreground="#3498DB" Margin="0,0,0,15"/>

                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="FLÈCHE GAUCHE" FontWeight="Bold"/> - Marcher à gauche
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="FLÈCHE DROITE" FontWeight="Bold"/> - Courir à droite
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="FLÈCHE BAS" FontWeight="Bold"/> - Glissade (Slide)
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="CTRL DROIT / NUMPAD 0" FontWeight="Bold"/> - Attaque 1
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="NUMPAD 1" FontWeight="Bold"/> - Attaque 2
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="NUMPAD 2" FontWeight="Bold"/> - Attaque 3
                        </TextBlock>
                        <TextBlock FontSize="18" Foreground="White" Margin="0,5">
                            <Run Text="SHIFT DROIT / NUMPAD 3" FontWeight="Bold"/> - Bloquer
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Objectif -->
                <Border Background="#E74C3C" Padding="20">
                    <StackPanel>
                        <TextBlock Text="OBJECTIF DU JEU" FontSize="28" FontWeight="Bold" 
                                   Foreground="White" Margin="0,0,0,15"/>

                        <TextBlock FontSize="18" Foreground="White" TextWrapping="Wrap">
                            Affrontez votre adversaire dans un combat épique ! 
                            Utilisez vos attaques pour vaincre l'ennemi et maîtrisez 
                            les déplacements pour esquiver les coups. Le dernier guerrier 
                            debout remporte la victoire !
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Bouton Retour -->
        <Button x:Name="BtnBack" Grid.Row="2" Content="RETOUR AU MENU" 
                FontSize="24" FontWeight="Bold" 
                Width="300" Height="50"
                Background="#95A5A6" Foreground="White"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="BtnBack_Click"/>
    </Grid>
</UserControl>