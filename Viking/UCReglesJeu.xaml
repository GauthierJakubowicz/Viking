<UserControl x:Class="VikingGame.UCReglesJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="MainGrid">
        <Image Source="img/background_glacial_mountains.png" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Règles du jeu Viking :" FontSize="24" Margin="10"/>
            <TextBlock Text="1. Utilise les flèches pour te déplacer." Margin="5"/>
            <TextBlock Text="2. Espace pour attaquer." Margin="5"/>
            <Button Content="Retour au menu" Click="BtnBack_Click" Width="200" Margin="20"/>
        </StackPanel>
    </Grid>
</UserControl>