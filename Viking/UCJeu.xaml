<UserControl x:Class="Viking.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280">

    <Grid Background="#2C3E50">
        <!-- Canvas pour le jeu -->
        <Canvas x:Name="GameCanvas" Width="1280" Height="720">
            <!-- Arrière-plan du jeu -->
            <Rectangle Width="1280" Height="720" Fill="#34495E"/>

            <!-- Joueur 1 -->
            <Image x:Name="imgJoueur1" 
                   Width="124" 
                   Height="84"
                   Canvas.Left="100" 
                   Canvas.Top="300"/>

            <!-- Joueur 2 -->
            <Image x:Name="imgJoueur2" 
                   Width="124" 
                   Height="84"
                   Canvas.Left="1000" 
                   Canvas.Top="300"/>

            <!-- Barre de santé Joueur 1 -->
            <Border Canvas.Left="50" Canvas.Top="30" 
                    Width="300" Height="40" 
                    Background="#34495E" 
                    BorderBrush="#1ABC9C" 
                    BorderThickness="2" 
                    CornerRadius="5">
                <Grid Margin="5">
                    <Rectangle x:Name="HealthBarJ1" 
                              Fill="#1ABC9C" 
                              HorizontalAlignment="Left"/>
                    <TextBlock Text="JOUEUR 1" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Barre de santé Joueur 2 -->
            <Border Canvas.Left="930" Canvas.Top="30" 
                    Width="300" Height="40" 
                    Background="#34495E" 
                    BorderBrush="#3498DB" 
                    BorderThickness="2" 
                    CornerRadius="5">
                <Grid Margin="5">
                    <Rectangle x:Name="HealthBarJ2" 
                              Fill="#3498DB" 
                              HorizontalAlignment="Left"/>
                    <TextBlock Text="JOUEUR 2" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Sol -->
            <Rectangle Canvas.Top="600" 
                      Width="1280" 
                      Height="120" 
                      Fill="#2C3E50"/>
        </Canvas>
    </Grid>
</UserControl>